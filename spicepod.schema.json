{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://json.schemastore.org/spicepod.json",
  "title": "Spice.ai Spicepod Manifest Schema",
  "description": "Configuration Schema for the Spice.ai spicepod manifest",
  
  "type": "object",
  "fileMatch": ["spicepod.yaml", "spicepod.yml", "spicepod.json"],
 
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+beta[0-9]+$"
    },
    "kind": {
      "type": "string"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["name", "version", "kind"]
}
